<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>
    <style name="nameText" parent="TextAppearance.AppCompat">
        <item name="android:textColor">@color/colorText</item>
        <item name="android:textSize">@dimen/nameSize</item>
        <item name="android:textStyle">bold</item>
        <item name="android:gravity">bottom</item>
    </style>
    <style name="addressText" parent="TextAppearance.AppCompat">
        <item name="android:textColor">@color/colorText</item>
        <item name="android:textSize">@dimen/addressSize</item>
        <item name="android:gravity">top</item>
    </style>
    <style name="linearLayout">
        <item name="android:background">@color/colorBackground</item>
        <item name="android:paddingBottom">@dimen/padding_bottom</item>
        <item name="android:paddingTop">@dimen/padding_top</item>
        <item name="android:paddingLeft">@dimen/padding_left</item>
        <item name="android:paddingRight">@dimen/padding_right</item>
        <item name="android:minHeight">@dimen/minHeight</item>
    </style>
    <style name="image">
        <item name="android:paddingBottom">@dimen/padding_bottom</item>
        <item name="android:paddingTop">@dimen/padding_top</item>
        <item name="android:paddingLeft">@dimen/padding_left</item>
        <item name="android:paddingRight">@dimen/padding_right</item>
    </style>

</resources>

